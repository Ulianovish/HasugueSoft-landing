---
import type { CollectionEntry } from 'astro:content';
import { AnimatedSection } from '@components/react/AnimatedSection';

interface Labels {
  timeline: string;
  investment: string;
  challenge: string;
  solution: string;
  results: string;
  testimonial: string;
}

interface Props {
  id: string;
  content: NonNullable<CollectionEntry<'es'>['data']['caseStudies']>;
  labels: Labels;
}

const { id, content, labels } = Astro.props as Props;
---
<section id={id} class="bg-background py-20">
  <div class="container mx-auto px-6">
    <div class="mb-12 text-center">
      <AnimatedSection client:load delay={0}>
        <h2 class="mb-4 text-3xl font-bold lg:text-4xl">{content.heading}</h2>
      </AnimatedSection>
      <AnimatedSection client:load delay={0.1}>
        <p class="mx-auto max-w-3xl text-xl text-muted-foreground">{content.description}</p>
      </AnimatedSection>
    </div>

    <div class="mx-auto grid max-w-7xl gap-8 lg:grid-cols-3">
      {content.items.map((study, index) => (
        <AnimatedSection client:load delay={0.2 + index * 0.15}>
        <article class="group rounded-3xl border border-border bg-card shadow-sm transition-all duration-300 hover:shadow-xl">
          <div class="border-b border-border px-6 pb-4 pt-6">
            <div class="mb-3 flex items-center justify-between gap-3">
              <div>
                <span class="mb-1 inline-block rounded-full border border-border bg-muted px-3 py-1 text-xs font-semibold text-muted-foreground">
                  {study.industry}
                </span>
                <h3 class="text-lg font-semibold text-card-foreground">{study.company}</h3>
              </div>
              <div class="flex flex-col items-end gap-2 text-xs text-muted-foreground">
                <span class="flex items-center gap-1 rounded-full border border-primary/20 bg-primary/10 px-2 py-1 text-primary">
                  {labels.timeline}: {study.timeline}
                </span>
                <span class="flex items-center gap-1 rounded-full border border-success/20 bg-success/10 px-2 py-1 text-success">
                  {labels.investment}: {study.investment}
                </span>
              </div>
            </div>
          </div>

          <div class="space-y-6 px-6 py-6">
            <div>
              <h4 class="text-sm font-semibold text-destructive">{labels.challenge}</h4>
              <p class="mt-1 text-sm text-muted-foreground">{study.challenge}</p>
            </div>
            <div>
              <h4 class="text-sm font-semibold text-primary">{labels.solution}</h4>
              <p class="mt-1 text-sm text-muted-foreground">{study.solution}</p>
            </div>
            <div>
              <h4 class="mb-2 flex items-center gap-2 text-sm font-semibold text-success">
                <span>▲</span>
                {labels.results}
              </h4>
              <ul class="space-y-2">
                {study.results.map((result) => (
                  <li class="flex items-center justify-between rounded-xl bg-muted/50 px-3 py-2 text-sm">
                    <span class="font-medium text-muted-foreground">{result.metric}</span>
                    <span class="text-right">
                      <span class="block text-sm font-semibold text-success">{result.value}</span>
                      {result.detail && <span class="text-xs text-muted-foreground">{result.detail}</span>}
                    </span>
                  </li>
                ))}
              </ul>
            </div>
            {study.testimonial && (
              <blockquote class="rounded-2xl border border-primary/20 bg-primary/5 p-4 text-sm text-muted-foreground">
                “{study.testimonial.quote}”
                <footer class="mt-3 text-xs text-muted-foreground">
                  <strong class="text-foreground">{study.testimonial.author}</strong>
                  <div>{study.testimonial.role}</div>
                </footer>
              </blockquote>
            )}
          </div>
        </article>
        </AnimatedSection>
      ))}
    </div>

    {content.cta && (
      <AnimatedSection client:load delay={0.7}>
        <div class="mt-12 text-center">
        <div class="mx-auto max-w-xl rounded-3xl border border-primary/20 bg-gradient-to-br from-primary/10 to-secondary/10 px-8 py-10 text-center">
          <h3 class="text-2xl font-bold text-card-foreground">{content.cta.heading}</h3>
          <p class="mt-3 text-sm text-muted-foreground">{content.cta.description}</p>
          <a
            href={content.cta.href}
            target="_blank"
            rel="noopener noreferrer"
            class="mt-6 inline-flex items-center gap-2 rounded-full bg-primary px-6 py-3 text-sm font-semibold text-primary-foreground transition hover:bg-primary/90"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            {content.cta.label}
          </a>
        </div>
      </div>
      </AnimatedSection>
    )}
  </div>
</section>
