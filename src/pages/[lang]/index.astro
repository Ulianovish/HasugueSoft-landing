---
import { getCollection } from 'astro:content';

import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/astro/Header.astro';
import HeroSection from '@components/astro/HeroSection.astro';
import ValueProposition from '@components/astro/ValueProposition.astro';
import ProcessTimeline from '@components/astro/ProcessTimeline.astro';
import CaseStudies from '@components/astro/CaseStudies.astro';
import CompanyCredibility from '@components/astro/CompanyCredibility.astro';
import CallToAction from '@components/astro/CallToAction.astro';
import RoiCalculator from '@components/react/RoiCalculator.tsx';
import { getFallbackLocale, isSupportedLocale, locales, type Locale } from '@lib/i18n/config';

export const prerender = true;

export function getStaticPaths() {
  return (locales as readonly Locale[]).map((lang) => ({ params: { lang } }));
}

const rawLocale = Astro.params.lang ?? '';

if (!isSupportedLocale(rawLocale)) {
  Astro.redirect(`/${getFallbackLocale()}/`);
}

const locale = rawLocale as Locale;
const entries = await getCollection(locale);
const homeEntry = entries.find((entry) => entry.slug === 'home') ?? entries[0];

if (!homeEntry) {
  throw new Error(`Missing landing content for locale ${locale}`);
}

const { hero, valueProposition, calculator, process, caseStudies, credibility, callToAction } = homeEntry.data;
const canonical = Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : undefined;
const alternateLocale: Locale = locale === 'es' ? 'en' : 'es';
const rawBasePath = Astro.url.pathname.replace(/^\/[a-z]{2}(?=\/|$)/, '');
const normalizedPath = rawBasePath === '/' ? '' : rawBasePath;
const alternateHref = `/${alternateLocale}${normalizedPath}`;

const anchors = {
  services: locale === 'es' ? 'servicios' : 'services',
  calculator: locale === 'es' ? 'calculadora' : 'calculator',
  process: locale === 'es' ? 'proceso' : 'process',
  cases: locale === 'es' ? 'casos' : 'case-studies',
  company: locale === 'es' ? 'empresa' : 'company'
} as const;

const navLinks = [
  { href: `/${locale}#${anchors.services}`, label: locale === 'es' ? 'Servicios' : 'Services', targetId: anchors.services },
  { href: `/${locale}#${anchors.calculator}`, label: locale === 'es' ? 'Calculadora' : 'Calculator', targetId: anchors.calculator },
  { href: `/${locale}#${anchors.process}`, label: locale === 'es' ? 'Proceso' : 'Process', targetId: anchors.process },
  { href: `/${locale}#${anchors.cases}`, label: locale === 'es' ? 'Casos de Éxito' : 'Case Studies', targetId: anchors.cases },
  { href: `/${locale}#${anchors.company}`, label: locale === 'es' ? 'Empresa' : 'Company', targetId: anchors.company }
];

const languages = [
  { label: locale.toUpperCase(), href: `/${locale}${normalizedPath}`, active: true },
  { label: alternateLocale.toUpperCase(), href: alternateHref, active: false }
];

const valueLabels = locale === 'es'
  ? {
      recommended: 'Recomendado',
      timeline: 'Tiempo',
      cost: 'Costo',
      customization: 'Personalización',
      features: 'Características',
      savings: 'Ahorra 40-60% frente al desarrollo tradicional con resultados en la mitad del tiempo'
    }
  : {
      recommended: 'Recommended',
      timeline: 'Timeline',
      cost: 'Cost',
      customization: 'Customization',
      features: 'Key capabilities',
      savings: 'Save 40-60% compared to traditional delivery while shipping twice as fast'
    };

const processLabels = locale === 'es'
  ? {
      comparisonTitle: 'Desarrollo metodologia CODEXA vs Desarrollo Tradicional',
      comparisonSubtitle: 'Comparación de tiempos y eficiencia',
      modernLabel: 'Metodologia CODEXA',
      modernDuration: '8-10 semanas',
      traditionalLabel: 'Desarrollo tradicional',
      testimonialLabel: 'Testimonio',
      recommended: 'Recomendado'
    }
  : {
      comparisonTitle: 'CODEXA Methodology vs Traditional Development',
      comparisonSubtitle: 'Time-to-value comparison',
      modernLabel: 'CODEXA Methodology',
      modernDuration: '8-10 weeks',
      traditionalLabel: 'Traditional development',
      testimonialLabel: 'Testimonial',
      recommended: 'Recommended'
    };

const caseStudyLabels = locale === 'es'
  ? {
      timeline: 'Tiempo',
      investment: 'Inversión',
      challenge: 'Desafío',
      solution: 'Solución',
      results: 'Resultados',
      testimonial: 'Testimonio'
    }
  : {
      timeline: 'Timeline',
      investment: 'Investment',
      challenge: 'Challenge',
      solution: 'Solution',
      results: 'Results',
      testimonial: 'Testimonial'
    };

const credibilityLabels = locale === 'es'
  ? {
      certifications: 'Certificaciones',
      expertise: 'Experiencia del equipo',
      guarantee: 'Garantías de servicio',
      avgExperience: 'Experiencia comprobada',
      finalCtaLabel: 'Agendar consulta'
    }
  : {
      certifications: 'Certifications',
      expertise: 'Team expertise',
      guarantee: 'Service guarantees',
      avgExperience: 'Proven expertise',
      finalCtaLabel: 'Schedule consultation'
    };
---
<BaseLayout
  title={homeEntry.data.metaTitle}
  description={homeEntry.data.metaDescription}
  lang={locale}
  canonical={canonical}
  alternatePaths={{ [alternateLocale]: alternateHref }}
>
  <Header
    slot="header"
    brand="HasugueSoft"
    navLinks={navLinks}
    ctaLabel={locale === 'es' ? 'Agendar consultoría' : 'Schedule consultation'}
    ctaHref="https://wa.me/573044916302"
    languages={languages}
  />

  <HeroSection content={hero} />

  <ValueProposition id={anchors.services} content={valueProposition} labels={valueLabels} />

  {calculator && (
    <section id={anchors.calculator} class="dark-section py-20">
      <div class="container mx-auto max-w-6xl px-6">
        <div class="mb-12 text-center">
          <h2 class="text-3xl font-bold text-foreground sm:text-4xl">
            {calculator.heading}{' '}
            {calculator.highlight && <span class="text-gradient">{calculator.highlight}</span>}
          </h2>
          <p class="mt-4 text-base text-muted-foreground sm:text-lg">{calculator.description}</p>
        </div>
        <RoiCalculator client:idle locale={locale} />
      </div>
    </section>
  )}

  <ProcessTimeline id={anchors.process} content={process} labels={processLabels} />

  {caseStudies && <CaseStudies id={anchors.cases} content={caseStudies} labels={caseStudyLabels} />}

  {credibility && (
    <CompanyCredibility id={anchors.company} content={credibility} labels={credibilityLabels} />
  )}

  {callToAction && <CallToAction content={callToAction} />}

  <footer slot="footer" class="border-t border-border bg-card">
    <div class="mx-auto max-w-6xl px-6 py-12">
      <div class="grid gap-12 lg:grid-cols-12">
        <!-- Company Info -->
        <div class="lg:col-span-4">
          <a href={`/${locale}`} class="mb-4 inline-block text-xl font-bold text-gradient">
            HasugueSoft
          </a>
          <p class="mb-6 text-sm text-muted-foreground">
            {locale === 'es'
              ? 'Transformando PyMEs colombianas con desarrollo agéntico y soluciones de automatización impulsadas por IA.'
              : 'Transforming Colombian SMBs with agentic development and AI-powered automation solutions.'}
          </p>
          <div class="flex gap-4">
            <a href="https://www.linkedin.com/company/hasuguesoft/" target="_blank" rel="noreferrer" class="text-muted-foreground transition hover:text-foreground" aria-label="LinkedIn">
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
            <a href="https://twitter.com/hasuguesoft" target="_blank" rel="noreferrer" class="text-muted-foreground transition hover:text-foreground" aria-label="Twitter">
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </a>
            <a href="https://www.facebook.com/hasuguesoft" target="_blank" rel="noreferrer" class="text-muted-foreground transition hover:text-foreground" aria-label="Facebook">
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Quick Links -->
        <div class="lg:col-span-3">
          <h3 class="mb-4 text-sm font-semibold text-foreground">
            {locale === 'es' ? 'Enlaces Rápidos' : 'Quick Links'}
          </h3>
          <ul class="space-y-3 text-sm">
            <li>
              <a href={`/${locale}#${anchors.services}`} class="text-muted-foreground transition hover:text-foreground">
                {locale === 'es' ? 'Inicio' : 'Home'}
              </a>
            </li>
            <li>
              <a href={`/${locale}#${anchors.services}`} class="text-muted-foreground transition hover:text-foreground">
                {locale === 'es' ? 'Servicios' : 'Services'}
              </a>
            </li>
            <li>
              <a href={`/${locale}#${anchors.process}`} class="text-muted-foreground transition hover:text-foreground">
                {locale === 'es' ? 'Proceso' : 'Process'}
              </a>
            </li>
            <li>
              <a href={`/${locale}#${anchors.cases}`} class="text-muted-foreground transition hover:text-foreground">
                {locale === 'es' ? 'Casos de Éxito' : 'Case Studies'}
              </a>
            </li>
            <li>
              <a href={`/${locale}#${anchors.company}`} class="text-muted-foreground transition hover:text-foreground">
                {locale === 'es' ? 'Empresa' : 'Company'}
              </a>
            </li>
          </ul>
        </div>

        <!-- Contact Info -->
        <div class="lg:col-span-5">
          <h3 class="mb-4 text-sm font-semibold text-foreground">
            {locale === 'es' ? 'Contáctanos' : 'Contact Us'}
          </h3>
          <ul class="space-y-3 text-sm">
            <li class="flex items-start gap-3">
              <svg class="mt-0.5 h-5 w-5 flex-shrink-0 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <span class="text-muted-foreground">
                Calle 30 #11B-27, Medellin, Colombia
              </span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="h-5 w-5 flex-shrink-0 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              <a href="tel:+576011234567" class="text-muted-foreground transition hover:text-foreground">
                +57 (304) 491-6302
              </a>
            </li>
            <li class="flex items-center gap-3">
              <svg class="h-5 w-5 flex-shrink-0 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <a href="mailto:proyectos@hasugue.com" class="text-muted-foreground transition hover:text-foreground">
                proyectos@hasugue.com
              </a>
            </li>
            <li>
              <a
                href="https://wa.me/573044916302"
                target="_blank"
                rel="noopener noreferrer"
                class="mt-4 inline-flex items-center gap-2 rounded-full bg-primary px-6 py-2.5 text-sm font-semibold text-primary-foreground transition hover:bg-primary/90"
              >
                <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
                {locale === 'es' ? 'Agendar Una Llamada' : 'Schedule a Call'}
              </a>
            </li>
          </ul>
        </div>
      </div>

      <!-- Bottom Bar -->
      <div class="mt-12 flex flex-col gap-4 border-t border-border pt-8 text-xs text-muted-foreground sm:flex-row sm:items-center sm:justify-between">
        <span>
          © {new Date().getFullYear()} HasugueSoft. {locale === 'es' ? 'Todos los derechos reservados.' : 'All rights reserved.'}
        </span>
        <div class="flex gap-6">
          <a href="#" class="transition hover:text-foreground">
            {locale === 'es' ? 'Política de Privacidad' : 'Privacy Policy'}
          </a>
          <a href="#" class="transition hover:text-foreground">
            {locale === 'es' ? 'Términos de Servicio' : 'Terms of Service'}
          </a>
        </div>
      </div>
    </div>
  </footer>
</BaseLayout>
